<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColorPrimary">@color/colorOnPrimary</item>
    </style>

    <style name="subGridElement">
        <item name="layout_constraintWidth_default">percent</item>
        <item name="layout_constraintHeight_default">percent</item>
        <item name="layout_constraintWidth_percent">0.5</item>
        <item name="layout_constraintHeight_percent">0.5</item>
        <item name="android:src">@android:color/transparent</item>
    </style>

    <style name="titleButton" parent="Widget.MaterialComponents.Button">
        <item name="drawableTint">@color/colorOnPrimaryDark</item>
        <item name="android:drawablePadding">4dp</item>
    </style>

    <style name="titleH3" parent="@style/TextAppearance.MaterialComponents.Headline3">
        <item name="android:textColor">@color/colorOnSurfaceDarker</item>
    </style>

    <style name="titleH6" parent="@style/TextAppearance.MaterialComponents.Headline6">
        <item name="android:textColor">@color/colorOnSurfaceDark</item>
    </style>

    <style name="formTitle" parent="TextAppearance.MaterialComponents.Headline3">
        <item name="android:textColor">@color/colorOnSurfaceDarker</item>
    </style>

    <style name="formLabel" parent="TextAppearance.MaterialComponents.Headline5">
        <item name="android:textColor">@color/colorOnSurfaceDark</item>
    </style>

    <style name="formInput" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textColor">@color/colorOnSurfaceDarker</item>
    </style>

    <style name="formActionCancel" parent="Widget.MaterialComponents.Button">
        <item name="android:backgroundTint">@android:color/holo_red_light</item>
    </style>

    <style name="values" parent="AppTheme">
        <item name="android:background">@color/colorSecondary</item>
    </style>

    <style name="valuesText" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:padding">4dp</item>
        <item name="android:textColor">@color/colorOnSecondary</item>
    </style>

    <style name="metaTemp" parent="TextAppearance.MaterialComponents.Headline5">
        <item name="android:padding">8dp</item>
        <item name="android:textColor">@color/colorOnSurfaceDarker</item>
    </style>

    <style name="metaName" parent="TextAppearance.MaterialComponents.Headline5">
        <item name="android:padding">2dp</item>
        <item name="android:textColor">@color/colorOnSurfaceDarker</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="bottomNav" parent="Widget.MaterialComponents.BottomNavigationView.Colored">

    </style>

</resources>